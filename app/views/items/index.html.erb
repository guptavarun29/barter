<% content_for :header do %>
<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Choose what you like!
      </h1>
    </div>
  </div>
</section>
<% end %>

<div class="instrument-index-grid pt4">
  <% @items.each do |item| %>

    <div class="instrument border-light">
      <div class="instrument-thumb">
      <%if item.image_url != nil %>  
      <%= link_to image_tag(item.image_url(:thumb)), item %>
      <% end %>
      <% if item.condition? %>
        <div class="condition">
          <span class="tag is-dark"><%= item.condition %></span>
        </div>
      <% end %>
      </div>


    <div class="pa3">

      <h3 class="fw7 f4 title"><%= link_to item.title, item %></h3>

      <p class="has-text-gray fg pt1">Sold by <%= item.user.email %></p>

      <p class="f3 fw6 has-text-right pt2 price">Rs<%= item.price %></p>

      <% if current_user.id==item.user_id %>
         <%= link_to 'Edit', edit_item_path(item), class: "button is-small" %>
         <%= link_to 'Delete', item, method: :delete, data: { confirm: "Are you sure ?" }, class: "button is-small" %>
      <% end %>

    </div>
  </div>
  <% end %>
</div>


































---------------------------------------------------------------------------------------------------------------------------
<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Description</th>
      <th>Price</th>
      <th>Condition</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.brand %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= item.condition %></td>
        <td><%= item.title %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

